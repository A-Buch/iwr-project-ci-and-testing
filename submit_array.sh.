#!/bin/bash

#SBATCH --qos=priority
#SBATCH --partition=priority
#SBATCH --job-name=isi-cfact
#SBATCH --account=isipedia
#SBATCH --output=./log/%x.out
#SBATCH --error=./log/%x.err
#SBATCH --mail-type=END,FAIL
#SBATCH --mail-user=mengel@pik-potsdam.de
#SBATCH --ntasks=1
#SBATCH --array=0-4
#SBATCH --time=00:10:00

module purge
module load anaconda/5.0.0_py3
module load compiler/gnu/7.3.0
module load intel/2019.3

export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/home/mengel/anaconda3/envs/pymc3//lib/libfabric/libfabric.so
export FI_PROVIDER_PATH=/home/mengel/anaconda3/envs/pymc3//lib/libfabric/prov
export I_MPI_FABRICS=shm:ofi # shm:dapl not applicable for libfabric
unset I_MPI_DAPL_UD
unset I_MPI_DAPL_UD_PROVIDER
export I_MPI_PMI_LIBRARY=/p/system/slurm/lib/libpmi.so
export SUBMITTED=1
# export I_MPI_DEBUG=5

echo "Number of processes started:"
echo $SLURM_NPROCS

srun -n $SLURM_NTASKS /home/mengel/anaconda3/envs/pymc3//bin/python run_bayes_array.py

echo "Finished run."
